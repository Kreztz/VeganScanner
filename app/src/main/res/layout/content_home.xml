<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="109dp"
            android:gravity="center"
            android:padding="5dp"
            android:background="#03a719">

            ImageView
                android:layout_width="94dp"
                android:layout_height="76dp"
                android:id="@+id/imageView"
                android:src="@drawable/vegan_scanner_icon"
                android:background="#00000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Vegan Scanner"
                android:id="@+id/textView"
                android:textColor="#ffffff" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:background="#00FA75"
        android:weightSum="1"
        android:padding="5dp"
        android:layout_weight="1.03"
        android:gravity="center">

        <ImageButton
            android:layout_width="179dp"
            android:layout_height="185dp"
            android:id="@+id/scan"
            android:src="@drawable/scan_icon"
            android:background="#00FA75"
            android:padding="5dp"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#fcaf17"
        android:weightSum="1"
        android:padding="5dp">

        <ImageButton
            android:layout_width="78dp"
            android:layout_height="31dp"
            android:id="@+id/toSearch"
            android:src="@drawable/search_icon"
            android:background="#fcaf17"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true" />

        <ImageButton
            android:layout_width="57dp"
            android:layout_height="match_parent"
            android:id="@+id/toSuggest"
            android:src="@drawable/help_icon"
            android:background="#fcaf17"
            android:padding="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:id="@+id/toAbout"
            android:background="@drawable/about_icon"
            android:layout_toEndOf="@+id/toSearch"
            android:layout_alignTop="@+id/toSuggest" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toScan"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/toSearch"
            android:background="@drawable/scan_icon" />

    </RelativeLayout>
</LinearLayout>
