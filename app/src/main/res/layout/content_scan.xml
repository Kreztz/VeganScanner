<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="53dp"
        android:gravity="center|left"
        android:padding="5dp"
        android:background="#000000"
        android:weightSum="1">

        <TextView
            android:layout_width="185dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="VEGAN"
            android:id="@+id/textView3"
            android:gravity="center"
            android:background="#7b7b7b"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="NOT VEGAN"
            android:id="@+id/textView4"
            android:gravity="center"
            android:background="#7b7b7b"
            android:textColor="#ffffff" />
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:background="#040404"
        android:weightSum="1"
        android:padding="5dp"
        android:layout_weight="1.03"
        android:gravity="center">

        <SurfaceView
            android:id="@+id/surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:id="@+id/likeitornot"
            android:src="@drawable/help_icon"
            android:background="#fcaf17"
            android:padding="0dp"
            android:layout_gravity="bottom"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:id="@+id/leavescan"
            android:layout_alignTop="@+id/likeitornot"
            android:layout_alignParentStart="true"
            android:background="@drawable/stop_icon" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="why?"
            android:id="@+id/details"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="#a68888"
            android:layout_alignStart="@+id/likeitornot" />

    </RelativeLayout>

</LinearLayout>